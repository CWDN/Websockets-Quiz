header
  .row
    .category
      h2 Your Results

.col-xs-12
  h2 You scored #{totalCorrect} out of #{totalQuestions}
each question, index in questions
  .col-xs-12
    .result.team-result
      .thumbnail.col-xs-12
        .results-question.col-xs-12 Question ##{index+1}
          .pull-right #{question.question}
        .results-answer.col-xs-12 Answer
          .pull-right #{question.correctAnswer}

        .team-answer.col-xs-12
          if (question.team.Answer == question.correctAnswer)
            .correct You answered:
            .pull-left
              i.fa.fa-check.fa-lg.correct
            .pull-left #{question.team.Answer}
          else
            .incorrect You answered:
            .pull-left
              i.fa.fa-times.fa-lg.incorrect
            .pull-left #{question.team.Answer}

