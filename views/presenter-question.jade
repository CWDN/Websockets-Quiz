header.header-purple
  .row
    .questionNum
      h3
        span #
        span.current-question #{currentQuestion}
        span /
        span.total-quetions #{totalQuestions}
  .row
    .category
      h2 #{category}

.container.content
  .question
    h2 #{question}

  .progress
    .progress-bar(style='width: 60%')
      span.progress-bar-text #{countdown}s

  .team-states
    .team.col-xs-6.col-sm-2.centered
      .team-name Team 1
      i.fa.fa-check.fa-lg

    .team.col-xs-6.col-sm-2.centered
      .team-name Team 2
      i.fa.fa-spinner.fa-spin.fa-lg
