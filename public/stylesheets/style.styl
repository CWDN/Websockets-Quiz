/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Roboto:300,400')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #27ae60
background-color = #faf9f0
font = 'Roboto'
body
	background-color background-color
	color #444

	.container
		font-family font
		font-weight 300
		.question
			text-align center
			padding 4em 2em
			h2
				font-size 3.7em
		.answers
			text-align center
			font-size 1.7em

			.answer
				font-weight 400
				padding 0.5em 0.6em
				margin-top 0.5em
				margin-bottom 0.5em
				background-color #fff
				box-shadow 0px 0px 10px 0px #eee
				text-align left
				cursor pointer

				.number
					background-color #fff
					color #444
					padding 7px 13px
					border-radius 50%
					margin-right 30px
					display inline-block
			.answer:hover
			.active
				background-color main-color
				color #fff


header
	font-family font
	color #fff
	font-size 25px
	font-weight 300

	/*
	* Note the use of the `main-color`
	* variable and the `darken` function
	*/
	background-color main-color
	display table
	width 100%

	div
		padding 10px

	.team
		float left
	.questionNum
		float right

	.category
		text-align center
		margin-top 2%
		font-size 1.5em


@media screen and (max-width: 700px)
	body
		.container
			.answers
				font-size 1.2em
			.question
				h2
					font-size 2em

